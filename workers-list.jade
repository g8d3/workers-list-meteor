head
  title Worker List

body
  +loginButtons
  br
  +skills
  +usersSkills

template(name='skills')
  input.create(placeholder='Create skills...')
  span.hidden.notice Created!
  br
  input.search(placeholder='Search skills...')
  .fixed-height
    each skills
      input.edit.skill(value=name data-id=_id)
      button.remove(data-id=_id) Remove
      span.hidden.notice Edited!
      br

template(name='usersSkills')
  each users
    +userSkills

template(name='userSkills')
  h1 User #{_id} #{name}
  ul
    each urls
      li
        a(href=href) #{content}
  br
  input.search(placeholder="Add skills...")
  br
  .fixed-height
    each skills
      button.skill(data-id=_id) #{name}
      span.hidden.notice Added!
      br
  h2 Added Skills
  each yourSkills
    span.fixed-width #{name}
    button.remove(data-id=_id) Remove
    span.hidden.notice Removed!
    br
